<h1>Edit Your Profile</h1>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.submit 'Update Profile' %>
  </div>
<% end %>

<%= link_to 'Back to Profile', user_path(@user) %>
